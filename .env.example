# Core
APP_PORT=8000

# DB / Redis
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/amnezia_manager
REDIS_URL=redis://redis:6379/0

# Fernet encryption key (32 bytes, urlsafe base64). Generate:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=REPLACE_WITH_FERNET_KEY

# JWT
JWT_SECRET_KEY=REPLACE_WITH_RANDOM_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_MINUTES=10080
AUTH_COOKIE_NAME=access_token

# Bootstrap admin (created automatically if users table is empty)
BOOTSTRAP_ADMIN_USERNAME=admin
BOOTSTRAP_ADMIN_PASSWORD=change_me

# SSH / deploy behavior
ACCEPT_UNKNOWN_SSH_HOST_KEYS=true
SSH_CONNECT_TIMEOUT=10
SSH_COMMAND_TIMEOUT=30

# Remote defaults
LOG_LEVEL=INFO
REMOTE_DEPLOY_DIR=/opt/amneziawg-web-ui
DEFAULT_WEB_UI_PORT=8080
DEFAULT_WG_PORT=51820
DEFAULT_NGINX_USER=admin
AWG_IMAGE=alexishw/amneziawg-web-ui:latest
